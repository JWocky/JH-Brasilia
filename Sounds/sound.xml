<?xml version="1.0"?>
 
<PropertyList>

 <fx>
 
		<crank>
            <name>engstart0</name>
            <reference-dist>3.0</reference-dist>
            <max-dist>6.0</max-dist>
            <mode>once</mode>
            <path>Sounds/turbine_start.wav</path>
            <condition>
                <greater-than>
                    <property>controls/engines/engine[0]/condition</property>
                    <value>0.1</value>
                </greater-than>
            </condition>
            <position>
                <x>-1.5</x>
                <y>2.5</y>
                <z>-0.33</z>
            </position>
        </crank>
 
<engine>
	<name>engine 1</name>
	<mode>looped</mode>
	<path>Sounds/turboprop1.wav</path>
	<property>engines/engine/running</property>
	<volume>
		<property>engines/engine/n2</property>
		<factor>0.01</factor>
		<min>0.2</min>
		<max>2.0</max>
		<offset>0.1</offset>
	</volume>
	<pitch>
		<property>engines/engine/rpm</property>
		<type>log</type>
		<factor>0.5578708</factor>
		<min>0.2</min>
		<max>4.0</max>
		<offset>0.10</offset>
	</pitch>
	<position>
		<x>-0.900756</x>
		<y>3.33207</y>
		<z>-0.345085</z>
	</position>
	<reference-dist>200.0</reference-dist>
	<max-dist>500.0</max-dist>
</engine>
  

<engine>
	<name>engine 2</name>
	<mode>looped</mode>
	<path>Sounds/turboprop1.wav</path>
	<property>engines/engine[1]/running</property>
	<volume>
		<property>engines/engine[1]/n2</property>
		<factor>0.01</factor>
		<min>0.2</min>
		<max>2.0</max>
		<offset>0.1</offset>
	</volume>
	<pitch>
		<property>engines/engine[1]/rpm</property>
		<type>log</type>
		<factor>0.5578708</factor>
		<min>0.2</min>
		<max>4.0</max>
		<offset>0.10</offset>
	</pitch>
	<position>
		<x>-0.900756</x>
		<y>-3.33207</y>
		<z>-0.345085</z>
	</position>
	<reference-dist>200.0</reference-dist>
	<max-dist>500.0</max-dist>
</engine>
  
            <!-- Rolagem no solo e batinada interna -->
            <rumble>
                  <name>rumble</name>
                  <mode>looped</mode>
                  <path>Aircraft/EMB-120/Sounds/CRJ_ROLL.wav</path>
                  <condition>
                        <and>
                              <or>
                                    <property>/gear/gear[0]/wow</property>
                                    <property>/gear/gear[1]/wow</property>
                                    <property>/gear/gear[2]/wow</property>
                              </or>
                              <equals>
                                    <property>/sim/current-view/internal</property>
                                    <value>true</value>
                              </equals>
							  <greater-than>
									<property>/velocities/groundspeed-kt</property>
									<value>5</value>
							  </greater-than>
                        </and>
                  </condition>
                  <volume>
                        <property>/velocities/airspeed-kt</property>
                        <type>log</type>
                        <factor>0.5</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
            </rumble>
            
            <touchc>
                  <name>squeal c</name>
                  <path>Aircraft/EMB-120/Sounds/CRJ_TOUCH_C.wav</path>
                  <condition>
                        <and>
										  <equals>
												<property>/gear/gear[0]/wow</property>
												<value>1</value>
										  </equals>
										  <equals>
												<property>/sim/current-view/internal</property>
												<value>1</value>
										  </equals>
                        </and>
                  </condition>
                  <volume>
                        <property>/velocities/speed-down-fps</property>
                        <factor>0.05</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <volume>
                        <property>/velocities/airspeed-kt</property>
                        <factor>0.01</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <volume>
                        <internal>dt_stop</internal>
                        <factor>0.05</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <pitch>
                        <property>/velocities/airspeed-kt</property>
                        <factor>0.0025</factor>
                        <offset>1.2</offset>
                  </pitch>
            </touchc>
            
            <touchl>
                  <name>squeal l</name>
                  <path>Aircraft/EMB-120/Sounds/CRJ_TOUCH_L.wav</path>
                  <condition>
                        <and>
										  <equals>
												<property>/gear/gear[1]/wow</property>
												<value>1</value>
										  </equals>
										  <equals>
												<property>/sim/current-view/internal</property>
												<value>1</value>
										  </equals>
                        </and>
                  </condition>
                  <volume>
                        <property>/velocities/speed-down-fps</property>
                        <factor>0.05</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <volume>
                        <property>/velocities/airspeed-kt</property>
                        <factor>0.01</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <volume>
                        <internal>dt_stop</internal>
                        <factor>0.05</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <pitch>
                        <property>/velocities/airspeed-kt</property>
                        <factor>0.0025</factor>
                        <offset>1.2</offset>
                  </pitch>
            </touchl>
            
            <touchr>
                  <name>squeal r</name>
                  <path>Aircraft/EMB-120/Sounds/CRJ_TOUCH_R.wav</path>
                  <condition>
                        <and>
										  <equals>
												<property>/gear/gear[2]/wow</property>
												<value>1</value>
										  </equals>
										  <equals>
												<property>/sim/current-view/internal</property>
												<value>1</value>
										  </equals>
                        </and>
                  </condition>
                  <volume>
                        <property>/velocities/speed-down-fps</property>
                        <factor>0.05</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <volume>
                        <property>/velocities/airspeed-kt</property>
                        <factor>0.01</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <volume>
                        <internal>dt_stop</internal>
                        <factor>0.05</factor>
                        <min>0</min>
                        <max>1.0</max>
                  </volume>
                  <pitch>
                        <property>/velocities/airspeed-kt</property>
                        <factor>0.0025</factor>
                        <offset>1.2</offset>
                  </pitch>
            </touchr>

        <gear>
            <name>gear</name>
            <mode>in-transit</mode>
            <path>Sounds/gear.wav</path>
            <property>gear/gear[0]/position-norm</property>
            <reference-dist>2.0</reference-dist>
            <max-dist>5.0</max-dist>
            <pitch>
                <internal>dt_play</internal>
                <offset>0.8</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>-2</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </gear>

        <gear>
            <name>gear-lock</name>
            <path>Sounds/gear-lck.wav</path>
            <condition>
                <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>0</value>
                </equals>
            </condition>
            <reference-dist>2.0</reference-dist>
            <max-dist>5.0</max-dist>
            <position>
                <x>-2</x>
                <y>0</y>
                <z>-2</z>
            </position>
        </gear>

        <flap>
            <name>flaps</name>
            <reference-dist>1.0</reference-dist>
            <max-dist>2.0</max-dist>
            <mode>in-transit</mode>
            <path>Sounds/flaps.wav</path>
            <property>surface-positions/flap-pos-norm</property>
            <volume>
                <property>sim/sound/cabin</property>
            </volume>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>-1</z>
            </position>
        </flap>

  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
    <property>/position/altitude-ft</property>
    <factor>-0.000015</factor>
    <offset>1.0</offset>
    <min>0.1</min>
    <max>1.0</max>
   </volume>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0035</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>
 
        <wind>
            <name>wind</name>
            <reference-dist>0.5</reference-dist>
            <max-dist>1.0</max-dist>
            <mode>looped</mode>
            <path>Sounds/wind.wav</path>
            <condition>
                <and>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>0</value>
                    </equals>
                    <not>
                        <property>sim/crashed</property>
                    </not>
                </and>
            </condition>
            <position>
                <x>-5</x>
                <y>0</y>
                <z>0</z>
            </position>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0</min>
                <max>0.5</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0015</factor>
                <min>0.0</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.0</offset>
            </pitch>
        </wind>

        <stall>
            <name>stall</name>
            <path>Sounds/beep.wav</path>
            <condition>
                <property>sim/alarms/stall-warning</property>
            </condition>
            <property>sim/alarms/stall-warning</property>
            <volume>
            <property>sim/alarms/stall-warning</property>
            <max>0.6</max>
        </volume>
        <pitch>
            <offset>0.5</offset>
        </pitch>
  </stall>
 
    <switch>
        <name>click on</name>
        <mode>once</mode>
        <path>Aircraft/777-200/Sounds/click.wav</path>
        <condition>
            <property>/sim/sound/switch</property>
        </condition>
        <volume>
            <factor>0.45</factor>
        </volume>
        <reference-dist>0.5</reference-dist>
        <max-dist>1.0</max-dist>
    </switch>

    <switch>
        <name>click off</name>
        <mode>once</mode>
        <path>Aircraft/777-200/Sounds/click.wav</path>
        <condition>
            <not>
                <property>/sim/sound/switch</property>
            </not>
        </condition>
        <volume>
            <offset>0.5</offset>
        </volume>
        <reference-dist>0.5</reference-dist>
        <max-dist>1.0</max-dist>
    </switch>
    
</fx>
 
</PropertyList>
